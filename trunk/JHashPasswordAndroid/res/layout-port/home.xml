<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical" android:gravity="fill">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/top_control_bar">
		<LinearLayout android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:background="@drawable/banner">
			<ImageView android:layout_height="wrap_content"
				android:src="@drawable/icon_50px" android:layout_width="wrap_content" android:contentDescription="+JHashPassword Icon"/>
			<TextView android:text="@string/app_name" android:id="@+id/txtApp_name"
				android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="5dip" android:shadowColor="#FF000000"
				android:shadowDx="0" android:shadowDy="-1" android:shadowRadius="0.2"
				android:textSize="18dip" android:textStyle="bold"
				android:gravity="center|center_horizontal" android:layout_gravity="center_vertical|left" android:layout_width="wrap_content"></TextView>
		</LinearLayout>
	</RelativeLayout>
	<LinearLayout android:id="@+id/bottom_control_bar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:background="@drawable/banner"
		android:orientation="vertical" android:paddingLeft="3dip"
		android:paddingRight="3dip" android:paddingTop="6dip"
		android:paddingBottom="4dip">
		<Button android:text="@string/btnGenPW" android:onClick="onButtonClicked" android:layout_width="fill_parent" android:enabled="false" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/btnGenPW"></Button>
		<Button android:text="@string/btnShowClipboard" android:onClick="onButtonClicked" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/btnShowClipboard"></Button>
	</LinearLayout>
	<RelativeLayout android:orientation="vertical"
		android:layout_below="@id/top_control_bar" android:layout_above="@id/bottom_control_bar"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<ScrollView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:layout_centerVertical="true">
			<LinearLayout android:gravity="center"
				android:layout_centerVertical="true" android:orientation="vertical"
				android:layout_gravity="center_vertical" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="@string/txtHostname" android:id="@+id/txtHostname"
					android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="left"></TextView>
				<Spinner android:id="@+id/sprHostname" android:prompt="@string/hostname_prompt"
					android:layout_height="wrap_content" android:layout_width="fill_parent"
					android:hapticFeedbackEnabled="true" android:longClickable="true" android:layout_weight="1"></Spinner>
				<TextView android:text="@string/txtLoginname" android:id="@+id/txtLoginname"
					android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="left"></TextView>
				<Spinner android:id="@+id/sprLoginname"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:prompt="@string/loginname_prompt"
					android:hapticFeedbackEnabled="true" android:longClickable="true" android:layout_weight="1"></Spinner>

				<View android:layout_height="5dip" android:layout_width="wrap_content" android:layout_weight="1"/>
				<View android:layout_height="2dip" android:background="#FF909090"
					android:layout_width="fill_parent" android:layout_weight="1"/>
				<View android:layout_height="5dip" android:layout_width="wrap_content" android:layout_weight="1"/>

				<TextView android:text="@string/txtPassphraseOne"
					android:id="@+id/tvPassphraseOne" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="left"></TextView>
				<EditText android:id="@+id/etPasswordOne"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:inputType="textPassword" android:layout_weight="1"></EditText>
				<TextView android:text="@string/txtPassphraseTwo"
					android:id="@+id/tvPassphraseTwo" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="left"></TextView>
				<EditText android:id="@+id/etPasswordTwo"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:inputType="textPassword" android:layout_weight="1"></EditText>
			</LinearLayout>
		</ScrollView>
	</RelativeLayout>
</RelativeLayout>